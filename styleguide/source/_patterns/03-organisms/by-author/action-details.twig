<section class="ma__action-details">
  <h2 class="ma__action-details__title">The Details</h2>

  <div class="ma__action-details__content">
    <div class="ma__action-details__anchor-links js-scroll-anchors">
        <button class="ma__action-details__toggle-link js-scroll-anchors-toggle">+</button>
        {% for section in actionDetails.sections %}
          <a href="#{{section.id}}" class="{{loop.first ? 'is-active' : ''}}">{{section.title}}</a>
        {% endfor %}
    </div>
    {% for actionSection in actionDetails.sections %}
      {% include "molecules-action-section" %}
    {% endfor %}
  </div>
</section>
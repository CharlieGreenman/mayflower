<section class="ma__section-links">
  <!-- Banner is optional -->
  {% if sectionLinks.image %}
    <div class="ma__section-links__banner">
      <img width="600" height="450" src="{{sectionLinks.image.src}}" alt="{{sectionLinks.image.alt}}" />
      <div class="ma__section-links__overlay"></div>
    </div>
  {% endif %}
  <div class="ma__section-links__content">
    <div class="ma__section-links__icon">
      {% set catIcon = sectionLinks.catIcon %}
      {% include "atoms-cat-icon" %}
    </div>
    <h3 class="ma__section-links__title">
      <a href="{{sectionLinks.title.href}}">{{sectionLinks.title.text}}&nbsp;{% include "atoms-svg-arrow" %}</a>
    </h3>
    <p class="ma__section-links__description">{{sectionLinks.description}}</p>
    <ul class="ma__section-links__items">
      {% for list in sectionLinks.links %}
      <li class="ma__section-links__item">
        <a href="{{list.href}}" class="ma__section-links__link">{{list.text}}<span role="presentation"></span></a>
      </li>
      {% endfor %}
    </ul>
  </div>
</section>
